<% if notice %>
<div class="row">
  <div class="col">
    <div class="alert alert-info alert-dismissible fade show" role="alert">
      <p id="notice" class="p-0 m-0"><%= notice %></p>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
</div>
<% end %>

<h1>Vet Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Clinic name</th>
      <th>Address</th>
      <th>Postalcode</th>
      <th>Phone</th>
      <th>Hours</th>
      <th>Services</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vet_profiles.each do |vet_profile| %>
      <tr>
        <td><%= vet_profile.clinic_name %></td>
        <td><%= vet_profile.address %></td>
        <td><%= vet_profile.postalcode %></td>
        <td><%= vet_profile.phone %></td>
        <td><%= vet_profile.hours %></td>
        <td><%= vet_profile.services %></td>
        <% if vet_profile.image.attached? %>
          <td><img src=<%= (url_for(vet_profile.image)) %> alt=""></td>
        <% else %>
          <td><img src=<%= image_url "defaultProfile.jpeg"%> alt=""></td>
        <% end %>

        <td>
        <%= form_with(scope: :add_vet_to_user, url: add_vet_to_user_path(vet_profile.vet_id), local: true) do |form| %>
          <div class="field">
            <%= form.hidden_field :vet_id, value: vet_profile.vet_id %>
          </div>

          <div class="actions">
            <%= form.submit 'Add as vet' %>
          </div>
        <% end %>
        </td>
        <td><%= link_to 'Show', vet_profile %></td>
        <td><%= link_to 'Edit', edit_vet_profile_path(vet_profile) %></td>
        <td><%= link_to 'Destroy', vet_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

