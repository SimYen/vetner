<div class="container" style="margin-top: 5rem">
  <% if notice %>
  <div class="row">
    <div class="col">
      <div class="alert alert-info alert-dismissible fade show" role="alert">
        <p id="notice" class="p-0 m-0"><%= notice %></p>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  </div>
  <% end %>

  <div class="row">
    <div class="col-12 col-md-4">
      <div class="row">
        <div class="col-6 col-md-6">
		    <% if @vet_profile.image.attached? %>
		      <img src=<%= (url_for(@vet_profile.image)) %> alt=<%= @vet_profile.clinic_name %> >
		    <% else %>
		      <img src=<%= image_url "defaultProfile.jpeg"%> alt=<%= @vet_profile.clinic_name %> >
		    <% end %>


<div>
  <p>
    <strong>Image:</strong>
  </p>
  <p>
    <strong>Clinic name:</strong>
    <%= @vet_profile.clinic_name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @vet_profile.address %>
  </p>

  <p>
    <strong>Country:</strong>
    <%= @vet_profile.country %>
  </p>

  <p>
    <strong>Postalcode:</strong>
    <%= @vet_profile.postalcode %>
  </p>

  <% if user_signed_in? %>
    <iframe src=<%="https://www.onemap.sg/amm/amm.html?mapStyle=Default&zoomLevel=15&marker=latLng:#{@userLat},#{@userLong}!colour:red&marker=latLng:#{@vetLat},#{@vetLong}!colour:lightblue&popupWidth=200" %> height="450" width="450" scrolling="no" frameborder="0" allowfullscreen="allowfullscreen"></iframe>
  <% else %>
    <iframe src=<%="https://www.onemap.sg/amm/amm.html?mapStyle=Default&zoomLevel=15&marker=latLng:#{@vetLat},#{@vetLong}!colour:lightblue&popupWidth=200" %> height="450" width="450" scrolling="no" frameborder="0" allowfullscreen="allowfullscreen"></iframe>
  <% end %>

  <p>
    <strong>Contacts:</strong>
    <%= @vet_profile.phone %>
  </p>

  <p>
    <strong>Website:</strong>
    <%= @vet_profile.website %>
  </p>

  <%= link_to 'Edit', edit_vet_profile_path(@vet_profile) %> |
  <%= link_to 'Back', vet_profiles_path %>
</div>

<div>
  <p>
    <strong>Hours:</strong>
    <%= @vet_profile.hours %>
  </p>

  <p>
    <strong>Services:</strong>
    <%= @vet_profile.services %>
  </p>
</div>

<hr>
<%= form_with(scope: :add_vet_to_user, url: add_vet_to_user_path, local: true) do |form| %>
  <div class="field">
    <%= form.hidden_field :vet_id, value:@vet_profile.vet_id %>
  </div>

  <div class="actions">
    <%= form.submit 'Add as vet' %>
  </div>
<% end %>