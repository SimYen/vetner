<div class="container" style="margin-top: 2rem; margin-bottom: 2rem;">
  <div class="row">
    <div class="col">
      <%= form_with(model: pet_record, local: true) do |form| %>
      <% if pet_record.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(pet_record.errors.count, "error") %> prohibited this pet_record from being saved:</h2>

          <ul>
          <% pet_record.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

        <div class="form-group row">
          <%= form.label :pet_id, 'Pet', class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <input type="text" name="pet_name" value=<%= @pet.name %> class="form-control" disabled />
            <%= form.hidden_field :pet_id, value: @pet.id, :readonly => true %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :title, 'Title', class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.text_field :title, class: "form-control", required: true %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :date, 'Date', class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.date_select :date, {
                :order => [:day, :month, :year],
                :start_year => 1990
               },
               {:class => "form-control my-2"} %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :content, 'Content', class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.text_area :content, class: "form-control", rows:"10", required: true%>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-10">
              <%= form.submit class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
