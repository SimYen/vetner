<div class="container text-center" style="margin-top: 2rem; margin-bottom: 2rem;">
	<h3>Send A Message to Us</h3>
<div class="container">
	<div class="row justify-content-md-center">
		<div class="col col-md-8">
	<%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |form| %>
	<div class="form-group">
		<div class="field">
			<%= form.label :name, "Name" %><br />
			<%= form.text_field :name, :required => true, autofocus: true, autocomplete: "name", class: "form-control" %>
		</div>
		<br>
		<div class="field">
			<%= form.label :email, "Email" %><br />
			<%= form.email_field :email, :required => true, autofocus: true, autocomplete: "email", class: "form-control" %>
		</div>
		<br>
		<div class="field">
			<%= form.label :message, "Message" %><br />
			<%= form.text_area :message, :as => :text, :required => true, class: "form-control" %>
		</div>
	</div>
		<div class="actions">
			<%= form.button :submit, 'Send message', :class=> "btn btn-success" %>
		</div>
	<% end %>
			</div>
		</div>
	</div>
</div>