<div class="jumbotron text-center">
  <h3>Send A Message to Us</h3>

  <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |form| %>
	<div class="form-group">
	  <div class="field">
      <%= form.label :name, "Name" %><br />
      <%= form.text_field :name, :required => true, autofocus: true, autocomplete: "name" %>
	  </div>
	  <br>
	  <div class="field">
      <%= form.label :email, "Email" %><br />
      <%= form.email_field :email, :required => true, autofocus: true, autocomplete: "email" %>
	  </div>
	  <br>
	  <div class="field">
      <%= form.label :message, "Message" %><br />
      <%= form.text_area :message, :as => :text, :required => true %>
	  </div>
	</div>
	  <div class="actions">
      <%= form.button :submit, 'Send message', :class=> "btn btn-primary" %>
	  </div>
	<% end %>
</div>
