<!DOCTYPE html>
<html>
	<head>
		<title>Vetner</title>
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>

		<%= stylesheet_link_tag    'application', media: 'all' %>
		<%= javascript_include_tag 'application' %>
	</head>

	<body>
		<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
			<a class="navbar-brand" href="#">Vetner</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarCollapse">

				<% if user_signed_in? %>
				<ul class="navbar-nav mr-auto">
					<li class="nav-item">
						<%= link_to 'Your Profile', user_profile_url(id: current_user.id), class: "nav-link" %>
					</li>
					<li class="nav-item">
						<%= link_to 'Log Out', destroy_user_session_url, method: :delete, class: "nav-link" %>
					</li>
				</ul>

				<% elsif vet_signed_in? %>
				<ul class="navbar-nav mr-auto">
					<li class="nav-item">
						<%= link_to 'Clinic Profile', vet_profile_url(id: current_vet.id), class: "nav-link" %>
					</li>
					<li class="nav-item">
						<%= link_to 'Vet Log Out', destroy_vet_session_url, method: :delete, class: "nav-link" %>
					</li>
				</ul>

				<% else %>
				<ul class="navbar-nav mr-auto">
					<li class="nav-item">
						<%= link_to 'User Login', new_user_session_url, class: "nav-link" %>
					</li>
					<li class="nav-item">
						<%= link_to 'Vet Login', new_vet_session_url, class: "nav-link" %>
					</li>
				</ul>

				<% end %>


				<form class="form-inline mt-2 mt-md-0">
					<input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
					<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
				</form>
			</div>
		</nav>
		<main role="main">
			<div class="container">
				<%= yield %>
			</div>
		</main>
	</body>
</html>