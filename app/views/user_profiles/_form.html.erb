<div class="container" style="margin-top: 70px">
  <div class="row">
    <div class="col">
      <%= form_with(model: user_profile, local: true) do |form| %>
        
        <!-- user profile image -->
        <!-- show default image if no image has been uploaded -->
        <% if user_profile.image.attached? %>
          <img src=<%= (url_for(user_profile.image)) %> alt="" width="128" class="my-2" id="profileImage">
        <% else %>
          <img src=<%= image_url "defaultProfile.png" %> alt="" width="128" class="my-2" id="profileImage">
        <% end %>

        <div class="input-group mb-3">
          <div class="custom-file">
            <%= form.file_field :image, class: "custom-file-input" %>
            <%= form.label :image, 'Choose a file', class: "custom-file-label" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :first_name, 'First Name', class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.text_field :first_name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :last_name, 'Last Name', class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.text_field :last_name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :postalcode, 'Postal code', class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.text_field :postalcode, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :unit, 'Unit', class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.text_field :unit, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :phone, 'Phone', class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.text_field :phone, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :username, 'Username', class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.text_field :username, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-10">
              <%= form.submit class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- script for displaying the newly uploaded profile image and filename -->
<script>
  $('#user_profile_image').on('change',function(event){
    // get the file info
    var files = event.target.files;
    var image = files[0];

    // replace the "Choose a file" label with the file name
    $(this).next('.custom-file-label').html(image.name);

    // show the new image
    var reader = new FileReader();

    reader.onload = function(file) {
      var img = $("#profileImage")[0];
      img.src = file.target.result;
    }
    
    reader.readAsDataURL(image);
  });
</script>
