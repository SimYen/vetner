<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Pet type</th>
      <th>Date of birth</th>
      <th>Breed</th>
      <th>Image</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.pet_type %></td>
        <td><%= pet.date_of_birth %></td>
        <td><%= pet.breed %></td>
        <% if pet.image.attached? %>
          <td><img src=<%= (url_for(pet.image)) %> alt=""></td>
        <% else %>
          <td><img src=<%= image_url "defaultAnimal.svg"%> alt=""></td>
        <% end %>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

